@page "/symbols"
<Container Fluid>
    <Tabs RenderMode="TabsRenderMode.LazyReload" 
          SelectedTab="@selectedTab" 
          SelectedTabChanged="@OnSelectedTabChanged" 
          Background="Background.Dark" 
          TextColor="TextColor.Light"
          Flex="Flex.Row.AlignContent.Between">
        <Items>
            <Tab Name="manaCosts" Border="Border.Is1.Rounded.Light.OnAll">Mana Costs</Tab>
            <Tab Name="manaRepresentatives" Border="Border.Is1.Rounded.Light.OnAll">Mana Representations</Tab>
            <Tab Name="transposables" Border="Border.Is1.Rounded.Light.OnAll">Transposables</Tab>
            <Tab Name="funny" Border="Border.Is1.Rounded.Light.OnAll">Funny</Tab>
            <Tab Name="other" Border="Border.Is1.Rounded.Light.OnAll">Other</Tab>
        </Items>
        <Content>
            <TabPanel Name="manaCosts" Background="Background.Dark" TextColor="TextColor.Light">
                <ListGroup>
                    <ListGroupItem Background="Background.Dark" TextColor="TextColor.Light">
                        <Div Flex="Flex.JustifyContent.Between"  Border="Border.Is2.RoundedBottom.Light.OnBottom" Width="Width.Is100">
                            <Heading Size="HeadingSize.Is2">Image</Heading>
                            <Heading Size="HeadingSize.Is2">Text</Heading>
                            <Heading Size="HeadingSize.Is2">Description</Heading>
                        </Div>
                    </ListGroupItem>
                    <Repeater TItem="SymbologyDatum" Items="@_manaCostSymbols" Context="manaSymbolContext">
                        <Div Flex="Flex.JustifyContent.Between" Width="Width.Is100">
                            <img data-src="@manaSymbolContext.SvgUri" data-sizes="auto" height="32px" width="32px" alt="@manaSymbolContext.English" class="lazyload"/>
                            <Heading Size="HeadingSize.Is5" Margin="Margin.Is1.FromBottom">@manaSymbolContext.Symbol</Heading>
                            <Small>@manaSymbolContext.English</Small>
                        </Div>
                    </Repeater>
                </ListGroup>
            </TabPanel>
            <TabPanel Name="manaRepresentatives" Background="Background.Dark" TextColor="TextColor.Light">
                <ListGroup>
                    <ListGroupItem Background="Background.Dark" TextColor="TextColor.Light" Width="Width.Is100">
                        <Div Flex="Flex.JustifyContent.Between"  Border="Border.Is2.RoundedBottom.Light.OnBottom">
                            <Heading Size="HeadingSize.Is2">Image</Heading>
                            <Heading Size="HeadingSize.Is2">Text</Heading>
                            <Heading Size="HeadingSize.Is2">Description</Heading>
                        </Div>
                    </ListGroupItem>
                    <Repeater TItem="SymbologyDatum" Items="@_manaSymbols" Context="manaRepresentativeContext">
                        <Div Flex="Flex.JustifyContent.Between" Width="Width.Is100">
                            <img data-src="@manaRepresentativeContext.SvgUri" data-sizes="auto" height="32px" width="32px" alt="@manaRepresentativeContext.English" class="lazyload"/>
                            <Heading Size="HeadingSize.Is5" Margin="Margin.Is1.FromBottom">@manaRepresentativeContext.Symbol</Heading>
                            <Small>@manaRepresentativeContext.English</Small>
                        </Div>
                    </Repeater>
                </ListGroup>
            </TabPanel>
            <TabPanel Name="transposables" Background="Background.Dark" TextColor="TextColor.Light" Width="Width.Is100">
                <ListGroup>
                    <ListGroupItem Background="Background.Dark" TextColor="TextColor.Light">
                        <Div Flex="Flex.JustifyContent.Between"  Border="Border.Is2.RoundedBottom.Light.OnBottom">
                            <Heading Size="HeadingSize.Is2">Image</Heading>
                            <Heading Size="HeadingSize.Is2">Text</Heading>
                            <Heading Size="HeadingSize.Is2">Description</Heading>
                        </Div>
                    </ListGroupItem>
                    <Repeater TItem="SymbologyDatum" Items="@_transposableSymbols" Context="transposableContext">
                        <Div Flex="Flex.JustifyContent.Between" Width="Width.Is100">
                            <img data-src="@transposableContext.SvgUri" data-sizes="auto" height="32px" width="32px" alt="@transposableContext.English" class="lazyload"/>
                            <Heading Size="HeadingSize.Is5" Margin="Margin.Is1.FromBottom">@transposableContext.Symbol</Heading>
                            <Small>@transposableContext.English</Small>
                        </Div>
                    </Repeater>
                </ListGroup>
            </TabPanel>
            <TabPanel Name="funny" Background="Background.Dark" TextColor="TextColor.Light">
                <ListGroup>
                    <ListGroupItem Background="Background.Dark" TextColor="TextColor.Light" Width="Width.Is100">
                        <Div Flex="Flex.JustifyContent.Between"  Border="Border.Is2.RoundedBottom.Light.OnBottom">
                            <Heading Size="HeadingSize.Is2">Image</Heading>
                            <Heading Size="HeadingSize.Is2">Text</Heading>
                            <Heading Size="HeadingSize.Is2">Description</Heading>
                        </Div>
                    </ListGroupItem>
                    <Repeater TItem="SymbologyDatum" Items="@_funnySymbols" Context="funnyContext">
                        <Div Flex="Flex.JustifyContent.Between" Width="Width.Is100">
                            <img data-src="@funnyContext.SvgUri" data-sizes="auto" height="32px" width="32px" alt="@funnyContext.English" class="lazyload"/>
                            <Heading Size="HeadingSize.Is5" Margin="Margin.Is1.FromBottom">@funnyContext.Symbol</Heading>
                            <Small>@funnyContext.English</Small>
                        </Div>
                    </Repeater>
                </ListGroup>
            </TabPanel>
            <TabPanel Name="other" Background="Background.Dark" TextColor="TextColor.Light">
                <ListGroup>
                    <ListGroupItem Background="Background.Dark" TextColor="TextColor.Light">
                        <Div Flex="Flex.JustifyContent.Between" Border="Border.Is2.RoundedBottom.Light.OnBottom" Width="Width.Is100">
                            <Heading Size="HeadingSize.Is2">Image</Heading>
                            <Heading Size="HeadingSize.Is2">Text</Heading>
                            <Heading Size="HeadingSize.Is2">Description</Heading>
                        </Div>
                    </ListGroupItem>
                    <Repeater TItem="SymbologyDatum" Items="@_otherSymbols" Context="miscContext">
                        <Div Flex="Flex.JustifyContent.Between" Width="Width.Is100">
                            <img data-src="@miscContext.SvgUri" data-sizes="auto" height="32px" width="32px" alt="@miscContext.English" class="lazyload"/>
                            <Heading Size="HeadingSize.Is5" Margin="Margin.Is1.FromBottom">@miscContext.Symbol</Heading>
                            <Small>@miscContext.English</Small>
                        </Div>
                    </Repeater>
                </ListGroup>
            </TabPanel>
        </Content>
    </Tabs>
</Container>