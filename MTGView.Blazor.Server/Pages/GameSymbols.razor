                </TableRow>
            </TableHeader>
            <TableBody Width="Width.Is100">
                <Repeater TItem="SymbologyDatum" Items="@_funnySymbols" Context="funnyContext">
                    <TableRow>
                        <TableRowCell>
                            <Image data-src="@funnyContext.SvgUri" data-sizes="auto" Style="height:48px;width:48px;" Text="@funnyContext.English" Class="lazyload" />
                        </TableRowCell>
                        <TableRowCell>
                            <Heading Size="HeadingSize.Is5" Margin="Margin.Is1.FromBottom" TextColor="TextColor.Light">@funnyContext.Symbol</Heading>
                        </TableRowCell>
